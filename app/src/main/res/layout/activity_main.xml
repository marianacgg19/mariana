<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/GenreText"
        android:id="@+id/GenreText"
        android:textStyle="bold" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GenreSpinner"
        android:layout_below="@+id/GenreText" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffe2e5e0"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/GenreSpinner"
        android:id="@+id/Separator" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/ArtistText"
        android:id="@+id/ArtistText"
        android:textStyle="bold"
        android:layout_below="@+id/Separator" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ArtistSpinner"
        android:layout_below="@+id/ArtistText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/LyricList"
        android:id="@+id/LyricList"
        android:gravity="center"
        android:typeface="sans"
        android:textStyle="italic"
        android:layout_below="@+id/ArtistSpinner" />
</RelativeLayout>
